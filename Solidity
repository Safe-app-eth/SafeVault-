contract VaultAutomation {
    struct Vault {
        address owner;
        uint256 balance;
        uint8 healthScore;
        bool isFlagged;
    }

    mapping(uint => Vault) public vaults;

    function checkHealth(uint vaultId) public view returns (bool) {
        return vaults[vaultId].healthScore < 60;
    }

    function triggerRebalance(uint vaultId) external {
        require(checkHealth(vaultId), "Vault is healthy");
        // Logic to rebalance assets
    }

    function scheduleAction(uint vaultId, uint timestamp) external {
        // Queue action for future execution
    }
}
