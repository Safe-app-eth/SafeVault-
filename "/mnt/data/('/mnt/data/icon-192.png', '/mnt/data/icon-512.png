from PIL import Image, ImageDraw

# Create simplified lock icon (vault-style) using shapes
def draw_lock_icon(size):
    img = Image.new("RGBA", (size, size), (24, 24, 24, 255))  # Dark background
    draw = ImageDraw.Draw(img)

    # Draw body of the lock
    padding = size // 6
    body_top = size // 2
    draw.rectangle(
        [padding, body_top, size - padding, size - padding],
        fill=(255, 255, 255, 255)
    )

    # Draw shackle
    shackle_width = size - 2 * padding
    shackle_height = size // 3
    draw.arc(
        [padding, padding, size - padding, body_top + padding],
        start=0, end=180,
        fill=(255, 255, 255, 255),
        width=8
    )

    return img

# Generate icons
icon_192 = draw_lock_icon(192)
icon_512 = draw_lock_icon(512)

# Save them
icon_192_path = "/mnt/data/icon-192.png"
icon_512_path = "/mnt/data/icon-512.png"
icon_192.save(icon_192_path)
icon_512.save(icon_512_path)

icon_192_path, icon_512_path
