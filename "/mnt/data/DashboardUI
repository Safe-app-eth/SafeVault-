# Static HTML Dashboard Template
html = """
<!DOCTYPE html>
<html>
<head>
  <title>SafeVault Dashboard</title>
  <meta charset="UTF-8" />
  <style>
    body { font-family: Arial, sans-serif; background: #f9f9f9; margin: 2rem; }
    h1 { color: #333; }
    table { width: 100%; border-collapse: collapse; margin-top: 1rem; }
    th, td { padding: 0.75rem; border: 1px solid #ddd; text-align: left; }
    th { background-color: #444; color: #fff; }
    tr:nth-child(even) { background-color: #f2f2f2; }
    .status { font-weight: bold; }
    .pending { color: orange; }
    .success { color: green; }
    .failed { color: red; }
  </style>
</head>
<body>
  <h1>üîê SafeVault Proposal Dashboard</h1>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Status</th>
        <th>Signers</th>
      </tr>
    </thead>
    <tbody id="dashboard"></tbody>
  </table>

  <script>
    async function loadData() {
      try {
        const res = await fetch("proposals.json");
        const data = await res.json();

        const tbody = document.getElementById("dashboard");
        data.forEach(p => {
          const row = document.createElement("tr");
          row.innerHTML = `
            <td>${new Date(p.date).toLocaleString()}</td>
            <td>${p.description}</td>
            <td class="status ${p.status.toLowerCase()}">${p.status}</td>
            <td>${p.signers?.join(", ") || "‚Äî"}</td>
          `;
          tbody.appendChild(row);
        });
      } catch (err) {
        console.error("Error loading dashboard:", err);
      }
    }
    loadData();
  </script>
</body>
</html>
"""

# Save HTML file
(dashboard_path / "index.html").write_text(html.strip())

# Sample JSON Proposal File
proposals_json = """
[
  {
    "date": "2025-07-24T13:00:00Z",
    "description": "Send 0.1 ETH to 0xABC...",
    "status": "Pending",
    "signers": ["0xSigner1", "0xSigner2"]
  },
  {
    "date": "2025-07-23T17:30:00Z",
    "description": "Send 50 USDC to 0xDEF...",
    "status": "Success",
    "signers": ["0xSigner3", "0xSigner4", "0xSigner5"]
  }
]
"""

# Write proposals.json (this should be updated by a script later)
(dashboard_path / "proposals.json").write_text(proposals_json.strip())

# README for the dashboard
readme = """
# üîê SafeVault GitHub Dashboard UI

## ‚úÖ What It Is
A live dashboard served via GitHub Pages that shows:
- Proposal date
- Description
- Status
- Signers

## üìÅ Files:
- `SAFE-Dashboard/index.html`: UI view
- `SAFE-Dashboard/proposals.json`: data source

## üîÅ Sync Notes
You can write a script or GitHub Action to update `proposals.json` using Safe API or Reown.

## üåç Access
Once pushed, this will be available at:
`https://<your-org>.github.io/<repo>/SAFE-Dashboard/`
"""

(base_path / "README.md").write_text(readme.strip())

# Create ZIP
zip_path = Path("/mnt/data/SafeVault-DashboardUI.zip")
with ZipFile(zip_path, "w") as zipf:
    for file in base_path.rglob("*"):
        if file.is_file():
            zipf.write(file, file.relative_to(base_path))

zip_path.name
