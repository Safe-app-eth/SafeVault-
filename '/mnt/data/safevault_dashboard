# update-proposals.yml content
workflow_content = """name: 🔄 Update Safe Proposals

on:
  schedule:
    - cron: '*/15 * * * *'
  workflow_dispatch:

jobs:
  update:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Fetch latest proposals
        run: |
          curl -s https://safe-vault-f44t.vercel.app/api/proposals -o docs/proposals.json

      - name: Commit and push
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add docs/proposals.json
          git commit -m "🔄 Update proposals.json from live backend" || echo "No changes to commit"
          git push
"""

# Minimal index.html content
index_html_content = """<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SafeVault Proposals</title>
</head>
<body>
  <h1>SafeVault Proposals Dashboard</h1>
  <p>Live proposals synced from SafeVault backend.</p>
  <pre id="proposals">Loading proposals...</pre>
  <script>
    fetch('proposals.json')
      .then(res => res.json())
      .then(data => {
        document.getElementById('proposals').textContent = JSON.stringify(data, null, 2);
      })
      .catch(err => {
        document.getElementById('proposals').textContent = 'Failed to load proposals.';
      });
  </script>
</body>
</html>
