{
  "name": "SafeVault Dev Container",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "git": {},
    "docker-in-docker": {},
    "node": "20",
    "python": "3.12"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-typescript-next",
        "yzhang.markdown-all-in-one",
        "ms-vscode.vscode-js-debug"
      ]
    }
  },
  "postCreateCommand": "bash -c '\
    npm install -g typescript ts-node yarn && \
    npm install -g @safe-global/safe-core-sdk @safe-global/safe-apps-sdk @safe-global/safe-wallet-adapter-walletconnect @reown/appkit \
  '",
  "mounts": [
    "source=${localWorkspaceFolder}/safevault,target=/workspace/safevault,type=bind,consistency=cached"
  ]
}
